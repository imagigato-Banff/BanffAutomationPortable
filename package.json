{
  "name": "banff-automation-system",
  "version": "1.0.0",
  "description": "Banff Automation System - Portable",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win portable",
    "build:mac": "electron-builder --mac dmg --publish never"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {},
  "build": {
    "appId": "com.banff.automation",
    "productName": "Banff Automation System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "app/run_windows.bat",
        "to": "app/run_windows.bat"
      }
    ],
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
